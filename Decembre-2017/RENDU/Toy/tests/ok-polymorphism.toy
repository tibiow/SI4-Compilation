// Idea of the example comes from
//     https://en.wikipedia.org/wiki/Polymorphism_(computer_science)

class Animal {
    string talk() {
        return "??";
    }
}

class Cat extends Animal {
    string talk() {
        return "Meow!";
    }
}

class Dog extends Animal {
    string talk() {
        return "Woof!";
    }
}

void hear(Animal a) {
    print("hear: ", a.talk(), "\n");
}

int main() {
    hear(new Cat);
    hear(new Dog);

    Animal a = new Dog;                 //
    print(a.typename(), "\n");          // ‚üπ Dog
    print((a.typename() == "Dog") ? "SUCCESS\n": "FAILURE\n");
    return 0;
}
